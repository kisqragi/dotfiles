{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls-cache"
         }
       }
    },
    "rust": {
      "command": "rustup",
      "args": ["run", "stable", "rls"],
      "filetypes": ["rust"]
    }
  },
  "suggest.keepCompleteopt": true
}
